<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Compañía Colombia -->
        <record id="company_colombia" model="res.company">
            <field name="name">Colombia Landing</field>
            <field name="currency_id" ref="base.COP"/>
            <field name="country_id" ref="base.co"/>
            <field name="email">info@colombia.example.com</field>
            <field name="phone">+57 1 234 5678</field>
        </record>
        
        <!-- Compañía México -->
        <record id="company_mexico" model="res.company">
            <field name="name">México Landing</field>
            <field name="currency_id" ref="base.MXN"/>
            <field name="country_id" ref="base.mx"/>
            <field name="email">info@mexico.example.com</field>
            <field name="phone">+52 55 1234 5678</field>
        </record>
        
        <!-- Compañía USA -->
        <record id="company_usa" model="res.company">
            <field name="name">USA Landing</field>
            <field name="currency_id" ref="base.USD"/>
            <field name="country_id" ref="base.us"/>
            <field name="email">info@usa.example.com</field>
            <field name="phone">+1 555 123 4567</field>
        </record>
        
        <!-- Compañía Cuba - Creada manualmente, solo referencia -->
        
        <!-- Equipos de Ventas por Compañía -->
        
        <!-- Equipo Colombia -->
        <record id="sales_team_colombia" model="crm.team">
            <field name="name">Ventas Colombia</field>
            <field name="company_id" ref="company_colombia"/>
            <field name="use_leads" eval="True"/>
            <field name="use_opportunities" eval="True"/>
        </record>
        
        <record id="sales_team_colombia_website" model="crm.team">
            <field name="name">Website Colombia</field>
            <field name="company_id" ref="company_colombia"/>
            <field name="use_leads" eval="True"/>
            <field name="use_opportunities" eval="True"/>
        </record>
        
        <!-- Equipo México -->
        <record id="sales_team_mexico" model="crm.team">
            <field name="name">Ventas México</field>
            <field name="company_id" ref="company_mexico"/>
            <field name="use_leads" eval="True"/>
            <field name="use_opportunities" eval="True"/>
        </record>
        
        <record id="sales_team_mexico_website" model="crm.team">
            <field name="name">Website México</field>
            <field name="company_id" ref="company_mexico"/>
            <field name="use_leads" eval="True"/>
            <field name="use_opportunities" eval="True"/>
        </record>
        
        <!-- Equipo USA -->
        <record id="sales_team_usa" model="crm.team">
            <field name="name">Ventas USA</field>
            <field name="company_id" ref="company_usa"/>
            <field name="use_leads" eval="True"/>
            <field name="use_opportunities" eval="True"/>
        </record>
        
        <record id="sales_team_usa_website" model="crm.team">
            <field name="name">Website USA</field>
            <field name="company_id" ref="company_usa"/>
            <field name="use_leads" eval="True"/>
            <field name="use_opportunities" eval="True"/>
        </record>
        
        <!-- Equipo Cuba - Creado manualmente, solo referencia -->
        
    </data>
</odoo>
