<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="chatbot_registration_landing" name="Registration Landing Page">
        <html>
            <head>
                <meta charset="utf-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1"/>
                <title>Registro - Landing Page</title>
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.0/css/bootstrap.min.css"/>
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
                <style>
                    * {
                        margin: 0;
                        padding: 0;
                        box-sizing: border-box;
                    }
                    
                    body {
                        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                    }
                    
                    .landing-container {
                        min-height: 100vh;
                        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                        padding: 50px 20px;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                    }
                    
                    .product-header {
                        background: rgba(255, 255, 255, 0.95);
                        padding: 30px;
                        border-radius: 20px;
                        margin-bottom: 30px;
                        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
                        text-align: center;
                    }
                    
                    .product-title {
                        color: #667eea;
                        font-size: 2.5rem;
                        font-weight: 700;
                        text-transform: lowercase;
                    }
                    
                    .registration-form-container {
                        display: flex;
                        justify-content: center;
                    }
                    
                    .registration-form {
                        background: white;
                        padding: 40px;
                        border-radius: 20px;
                        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
                        max-width: 500px;
                        width: 100%;
                    }
                    
                    .form-title {
                        color: #333;
                        text-align: center;
                        margin-bottom: 10px;
                        font-size: 1.8rem;
                        font-weight: 600;
                    }
                    
                    .form-subtitle {
                        text-align: center;
                        color: #666;
                        margin-bottom: 30px;
                        font-size: 1rem;
                    }
                    
                    .form-group {
                        margin-bottom: 25px;
                    }
                    
                    .form-group label {
                        display: block;
                        margin-bottom: 8px;
                        color: #333;
                        font-weight: 500;
                        font-size: 0.95rem;
                    }
                    
                    .form-group label i {
                        margin-right: 5px;
                    }
                    
                    .form-control {
                        width: 100%;
                        padding: 12px 15px;
                        border: 2px solid #e0e0e0;
                        border-radius: 10px;
                        font-size: 1rem;
                        transition: all 0.3s ease;
                    }
                    
                    .form-control:focus {
                        outline: none;
                        border-color: #667eea;
                        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
                    }
                    
                    .form-text {
                        display: block;
                        margin-top: 5px;
                        color: #666;
                        font-size: 0.85rem;
                    }
                    
                    .whatsapp-icon {
                        color: #25D366;
                    }
                    
                    .btn-submit {
                        width: 100%;
                        padding: 15px;
                        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                        color: white;
                        border: none;
                        border-radius: 10px;
                        font-size: 1.1rem;
                        font-weight: 600;
                        cursor: pointer;
                        transition: all 0.3s ease;
                        margin-top: 10px;
                    }
                    
                    .btn-submit:hover {
                        transform: translateY(-2px);
                        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
                    }
                    
                    .btn-submit:active {
                        transform: translateY(0);
                    }
                    
                    .btn-submit:disabled {
                        background: #ccc;
                        cursor: not-allowed;
                        transform: none;
                    }
                    
                    .success-message,
                    .error-message {
                        display: none;
                        padding: 15px;
                        border-radius: 10px;
                        text-align: center;
                        margin-top: 20px;
                        animation: slideIn 0.3s ease;
                    }
                    
                    .success-message {
                        background: #28a745;
                        color: white;
                    }
                    
                    .error-message {
                        background: #dc3545;
                        color: white;
                    }
                    
                    .success-message i,
                    .error-message i {
                        margin-right: 8px;
                    }
                    
                    @keyframes slideIn {
                        from {
                            opacity: 0;
                            transform: translateY(-10px);
                        }
                        to {
                            opacity: 1;
                            transform: translateY(0);
                        }
                    }
                    
                    @media (max-width: 768px) {
                        .product-title {
                            font-size: 2rem;
                        }
                        
                        .registration-form {
                            padding: 30px 20px;
                        }
                        
                        .form-title {
                            font-size: 1.5rem;
                        }
                    }
                </style>
            </head>
            <body>
                <div class="landing-container">
                    <div class="container">
                        <!-- Product/Service Title -->
                        <div class="product-header">
                            <h1 class="product-title">ventas de quesos</h1>
                        </div>
                        
                        <!-- Registration Form -->
                        <div class="registration-form-container">
                            <div class="registration-form">
                                <h2 class="form-title">
                                    <i class="fa fa-mobile-alt"></i> ¡Regístrate Ahora!
                                </h2>
                                <p class="form-subtitle">
                                    Déjanos tus datos y te enviaremos más información por WhatsApp
                                </p>
                                
                                <form id="leadRegistrationForm" action="/chatbot/register_lead" method="post">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    
                                    <div class="form-group">
                                        <label for="name">
                                            <i class="fa fa-user"></i> Nombre completo
                                        </label>
                                        <input type="text" 
                                               class="form-control" 
                                               id="name"
                                               name="name" 
                                               placeholder="Ej: Juan Pérez"
                                               required="required"/>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="phone">
                                            <i class="fa fa-whatsapp whatsapp-icon"></i> Número de WhatsApp
                                        </label>
                                        <input type="tel" 
                                               class="form-control" 
                                               id="phone"
                                               name="phone" 
                                               placeholder="Ej: 5353065305"
                                               required="required"/>
                                        <small class="form-text">
                                            Ingresa tu número con código de país (sin +)
                                        </small>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="email">
                                            <i class="fa fa-envelope"></i> Correo electrónico
                                        </label>
                                        <input type="email" 
                                               class="form-control" 
                                               id="email"
                                               name="email" 
                                               placeholder="Ej: correo@ejemplo.com"
                                               required="required"/>
                                    </div>
                                    
                                    <button type="submit" class="btn-submit" id="submitBtn">
                                        <i class="fa fa-paper-plane"></i> Enviar información
                                    </button>
                                </form>
                                
                                <div class="success-message" id="successMessage">
                                    <i class="fa fa-check-circle"></i> ¡Gracias! Tu información ha sido registrada. Te contactaremos pronto por WhatsApp.
                                </div>
                                
                                <div class="error-message" id="errorMessage">
                                    <i class="fa fa-exclamation-circle"></i> Hubo un error. Por favor, intenta nuevamente.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                <script type="text/javascript">
                    $(document).ready(function() {
                        // Phone number formatting
                        $('#phone').on('input', function() {
                            let value = $(this).val().replace(/\D/g, '');
                            $(this).val(value);
                        });
                        
                        // Form submission
                        $('#leadRegistrationForm').on('submit', function(e) {
                            e.preventDefault();
                            
                            const submitBtn = $('#submitBtn');
                            const originalText = submitBtn.html();
                            
                            // Disable button and show loading
                            submitBtn.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> Enviando...');
                            
                            // Hide previous messages
                            $('#successMessage, #errorMessage').hide();
                            
                            $.ajax({
                                url: $(this).attr('action'),
                                method: 'POST',
                                data: $(this).serialize(),
                                success: function(response) {
                                    try {
                                        const data = typeof response === 'string' ? JSON.parse(response) : response;
                                        
                                        if (data.success) {
                                            $('#successMessage').show();
                                            $('#leadRegistrationForm')[0].reset();
                                            
                                            // Reset button after 5 seconds
                                            setTimeout(function() {
                                                submitBtn.prop('disabled', false).html(originalText);
                                                $('#successMessage').hide();
                                            }, 5000);
                                        } else {
                                            $('#errorMessage').text(data.error || 'Error al procesar tu solicitud').show();
                                            submitBtn.prop('disabled', false).html(originalText);
                                        }
                                    } catch (e) {
                                        $('#errorMessage').text('Error al procesar la respuesta').show();
                                        submitBtn.prop('disabled', false).html(originalText);
                                    }
                                },
                                error: function(xhr, status, error) {
                                    $('#errorMessage').text('Error de conexión. Por favor, intenta nuevamente.').show();
                                    submitBtn.prop('disabled', false).html(originalText);
                                }
                            });
                        });
                    });
                </script>
            </body>
        </html>
    </template>
</odoo>
