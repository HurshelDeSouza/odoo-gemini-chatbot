<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Chat Session Form View -->
    <record id="view_chat_session_form" model="ir.ui.view">
        <field name="name">chat.session.form</field>
        <field name="model">chat.session</field>
        <field name="arch" type="xml">
            <form string="Chat Session">
                <header>
                    <button name="archive_session" string="Archive" type="object" 
                            invisible="status == 'archived'" class="btn-secondary"/>
                    <button name="activate_session" string="Activate" type="object" 
                            invisible="status == 'active'" class="btn-primary"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="session_name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="message_count"/>
                            <field name="tokens_used"/>
                            <field name="last_message_date"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Messages">
                            <field name="message_ids" readonly="1">
                                <list>
                                    <field name="create_date"/>
                                    <field name="message_type"/>
                                    <field name="content"/>
                                    <field name="tokens_used"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="message_type"/>
                                        <field name="user_id"/>
                                        <field name="create_date"/>
                                    </group>
                                    <group>
                                        <field name="tokens_used"/>
                                        <field name="model_used"/>
                                        <field name="response_time"/>
                                    </group>
                                    <field name="content"/>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Chat Session List View -->
    <record id="view_chat_session_list" model="ir.ui.view">
        <field name="name">chat.session.list</field>
        <field name="model">chat.session</field>
        <field name="arch" type="xml">
            <list string="Chat Sessions">
                <field name="session_name"/>
                <field name="user_id"/>
                <field name="message_count"/>
                <field name="tokens_used"/>
                <field name="last_message_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Chat Session Action -->
    <record id="action_chat_session" model="ir.actions.act_window">
        <field name="name">Chat Sessions</field>
        <field name="res_model">chat.session</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No chat sessions yet
            </p>
            <p>
                Chat sessions will appear here when users interact with the chatbot.
            </p>
        </field>
    </record>
</odoo>