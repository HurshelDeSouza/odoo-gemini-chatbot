<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Chat Message List View -->
    <record id="view_chat_message_list" model="ir.ui.view">
        <field name="name">chat.message.list</field>
        <field name="model">chat.message</field>
        <field name="arch" type="xml">
            <list string="Chat Messages">
                <field name="create_date"/>
                <field name="session_id"/>
                <field name="message_type"/>
                <field name="content"/>
                <field name="tokens_used"/>
                <field name="model_used"/>
            </list>
        </field>
    </record>

    <!-- Chat Message Form View -->
    <record id="view_chat_message_form" model="ir.ui.view">
        <field name="name">chat.message.form</field>
        <field name="model">chat.message</field>
        <field name="arch" type="xml">
            <form string="Chat Message">
                <sheet>
                    <group>
                        <group>
                            <field name="session_id"/>
                            <field name="message_type"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="tokens_used"/>
                            <field name="model_used"/>
                            <field name="response_time"/>
                        </group>
                    </group>
                    
                    <group string="Message Content">
                        <field name="content" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Chat Message Action -->
    <record id="action_chat_message" model="ir.actions.act_window">
        <field name="name">Chat Messages</field>
        <field name="res_model">chat.message</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No messages yet
            </p>
            <p>
                Chat messages will appear here when users interact with the chatbot.
            </p>
        </field>
    </record>
</odoo>